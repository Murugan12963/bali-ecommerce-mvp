# Environment
NODE_ENV=development

# Frontend Configuration (Next.js)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Database Configuration
# Choose one: MongoDB or PostgreSQL

# MongoDB
MONGODB_URI=mongodb://localhost:27017/bali-ecommerce

# PostgreSQL (if using Prisma)
DATABASE_URL=postgresql://username:password@localhost:5432/bali-ecommerce

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
FROM_EMAIL=noreply@bali-ecommerce.com
FROM_NAME=Bali E-Commerce

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-YOUR_GOOGLE_ANALYTICS_ID
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=GTM-YOUR_GTM_ID

# Customer Support
NEXT_PUBLIC_TIDIO_CHAT_KEY=your-tidio-public-key

# File Upload
MAX_FILE_SIZE=5000000
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Supplier API Configuration (examples)
BALI_BYA_API_KEY=your-bali-bya-api-key
BALI_BYA_API_URL=https://api.balibya.com

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Performance
COMPRESSION_LEVEL=6
CACHE_TTL=3600

# Admin Configuration
ADMIN_EMAIL=admin@bali-ecommerce.com
ADMIN_PASSWORD=secure-admin-password

# Indonesian E-commerce Compliance
PSE_CERTIFICATE_PATH=certificates/pse-certificate.pdf
PSE_REGISTRATION_NUMBER=your-pse-registration-number

# Development Tools
ANALYZE_BUNDLE=false
LIGHTHOUSE_CI=false
